# Create a new directory and enter it
function md {
    mkdir -p "$@" && cd "$@"
}

function zkeclipse {
   d=`pwd`
   cd /Applications/eclipse_zk/ && (nohup open -a Eclipse.app > /dev/null 2>&1  &) && cd "$d"
}

function ascii {
   echo "$1" | awk '{printf("%c",$0);}'
}

function amv {
   mv $1 $2
   ln $1 $2
}

function formatjs {
   name=$1
   js-beautify --indent-size 3 $name > .$name.tmp && cp .$name.tmp $name
}
