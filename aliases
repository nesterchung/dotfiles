# Shortcuts
alias dropbox="~/Dropbox"
alias dbx="cd ~/Dropbox"
alias g="git"
alias v="mvim "
alias m="mate "
alias s="subl ."
alias o="open"
alias oo="open ."
alias grep="grep --color=tty -d skip"
alias trsh='mv --target-directory=$HOME/.Trash'
alias rake="noglob rake"
alias tree="tree -CAFa -I 'CVS|*.*.package|.svn|.git' --dirsfirst"

alias sudo='sudo '

# Get OS X Software Updates, update Homebrew itself, and upgrade installed Homebrew packages
alias update='sudo softwareupdate -i -a; brew update; brew upgrade; gem update; npm update'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

# Enhanced WHOIS lookups
alias whois="whois -h whois-servers.net"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'


alias scssexample='cp ~/repos/scss-syntax.vim/example.scss $1'
alias cdrails='cd ~/nester.com/railsapp'
alias glive='guard init && guard init livereload'
alias mkhtml='sh $SCRIPT_HOME/mkhtml.sh $1'
alias mysqlstart='mysql.server start'
alias mysqlstop='mysql.server stop'


#aptg
alias sshxsms='ssh xsms@10.31.80.101'
alias sshxsmsuser='ssh xsmsuser@10.31.80.107'
alias sshtnlxsmsuser='ssh -L 9090:localhost:9090 xsmsuser@10.31.80.107'
alias cdaptg='cd ~/dev/aptg'
#alias sshaptg_test='ssh mcpayuser@10.31.80.101'


#sqldeveloper
alias sqldeveloper='nohup sqldeveloper > /dev/null &'
